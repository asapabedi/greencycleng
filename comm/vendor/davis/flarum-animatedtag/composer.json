{
    "name": "davis/flarum-animatedtag",
    "description": "Animates the tag at the top of topics",
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Connor Davis",
            "email": "cdavis@produes.co"
        }
    ],
    "support": {
        "issues": "https://github.com/connor0095/flarum-animatedtag/issues",
        "source": "https://github.com/connor0095/flarum-animatedtag"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.3",
        "flarum/tags": "v0.1.0-beta.4"
    },
    "autoload": {
        "psr-4": {
            "davis\\animatedtag\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Animated Tags",
            "icon": {
                "image": "icon.png",
                "backgroundColor": "#F7FBFF",
                "backgroundSize": "75%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center"
            }
        }
    }
}